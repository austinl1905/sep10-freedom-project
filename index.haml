!!! 5
%html
    %head
        %meta{:charset => "utf-8"}
        %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}
        %link{:href => "css/style.css", :rel => "stylesheet", :type => "text/css"}
        %link{:rel => "icon", :href => "imgs/ca_10.png", :type => "image/x-icon"}
        -# %style *{border-style: dashed;}
        %title Title
        %link{:href => "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css", :rel => "stylesheet", :integrity => "sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ", :crossorigin => "anonymous"}
    %body
        .header#header
            %h1.heading-1 Oceanography
            %h2.heading-2 The Past and Future of the Study of the Oceans
        %nav.navbar.navbar-expand-md.bg-info-subtle.sticky-top
            .container-fluid
                %button.navbar-toggler{:type => "button", :data => {:bs => {:toggle => "collapse", :target => "#navbarNav"}}, :aria => {:controls => "navbarNav", :expanded => "false", :label => "Toggle navigation"}}
                    %span.navbar-toggler-icon
                .collapse.navbar-collapse#navbarNav
                    %ul.navbar-nav.me-auto.mb-2.mb-lg-0
                        %li.nav-item
                            %a.active.nav-link.anchor-text{:aria => "page", :href => "#header"}Top
                        %li.nav-item
                            %a.nav-link.anchor-text{:href => "#"}Current Innovations
                        %li.nav-item
                            %a.nav-link.anchor-text{:href => "#"}Future Innovations
        .content
            .scrolldiv

        .footer
            %p.paragraph-text Made by Austin Liu
            %button.button{:type => "button"}
                %a.anchor-text{:href => "#header"}To Top

